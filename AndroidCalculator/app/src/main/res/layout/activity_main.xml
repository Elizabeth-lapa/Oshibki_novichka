<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9A9A9A"
        android:orientation="vertical"
        tools:context="com.sample.foo.samplecalculator.MainActivity">

        <!-- Белый цвет текста -->
        <!-- Текст в 1 строку -->
        <!-- Текст обрезается с начала, если не помещается в строку -->

        <TextView
            android:id="@+id/tvInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="end"
            android:padding="10dp"
            android:text=""/>

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:gravity="end"
            android:padding="10dp"
            android:text=""/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0.3dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonVectorOpen"
                    style="@style/Operations"
                    android:text="{" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonVectorClose"
                    style="@style/Operations"
                    android:text="}" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonOpenBracket"
                    style="@style/Operations"
                    android:text="(" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonCloseBracket"
                    style="@style/Operations"
                    android:text=")" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDivide"
                    style="@style/Operations"
                    android:text="/" />

            </LinearLayout>

            <!--            second row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonSeven"
                    style="@style/Operations"
                    android:text="7" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonEight"
                    style="@style/Operations"
                    android:text="8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonNine"
                    style="@style/Operations"
                    android:text="9" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonMultiply"
                    style="@style/Operations"
                    android:text="*" />


            </LinearLayout>
            <!--            third row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonFour"
                    style="@style/Operations"
                    android:text="4" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonFive"
                    style="@style/Operations"
                    android:text="5" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonSix"
                    style="@style/Operations"
                    android:text="6" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonSubtract"
                    style="@style/Operations"
                    android:text="-" />

            </LinearLayout>
            <!--            fourth row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonOne"
                    style="@style/Operations"
                    android:text="1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonTwo"
                    style="@style/Operations"
                    android:text="2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonThree"
                    style="@style/Operations"
                    android:text="3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonAdd"
                    style="@style/Operations"
                    android:text="+" />

            </LinearLayout>
            <!--            fifth row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDot"
                    style="@style/Operations"
                    android:text="." />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonZero"
                    style="@style/Operations"
                    android:text="0" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonClear"
                    style="@style/Operations"
                    android:background="@color/red"
                    android:text="C" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonEqual"
                    style="@style/Operations"
                    android:background="#4CAF50"
                    android:text="=" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--            android:layout_marginTop="@dimen/activity_vertical_margin"-->

</layout>